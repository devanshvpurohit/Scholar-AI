{
    "version": 2,
    "builds": [
        {
            "src": "frontend-angular/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/frontend-angular/browser"
            }
        },
        {
            "src": "backend-functions/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend-functions/main.py"
        },
        {
            "src": "/assets/(.*)",
            "dest": "frontend-angular/dist/frontend-angular/browser/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend-angular/dist/frontend-angular/browser/index.html"
        }
    ]
}